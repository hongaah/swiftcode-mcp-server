{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@swiftcode/api": ["node_modules/@swiftcode/api/dist/types/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
